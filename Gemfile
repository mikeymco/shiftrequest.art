source "https://rubygems.org"

# Jekyll and theme
gem "jekyll", "~> 3.10"
gem "kramdown-parser-gfm"

# Ruby 3.4 compatibility
gem "base64"
gem "logger"
gem "bigdecimal"

# Gallery plugin dependencies
gem "rmagick"
gem "exifr"

# Development tools
gem "webrick", "~> 1.8"

# Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
end

# Development gems
group :development do
  gem "jekyll-livereload"
end
